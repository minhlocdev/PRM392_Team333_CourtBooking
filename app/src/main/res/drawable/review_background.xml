<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the solid color for the rectangle -->
    <solid android:color="@color/white"/> <!-- You can change this color -->

    <!-- Set corner radius to zero to keep sharp edges -->
    <corners android:radius="4dp"/> <!-- Optional: To slightly round the corners -->

    <!-- Optional: Add padding inside the rectangle -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>

    <!-- Optional: Define stroke (border) for the rectangle -->
    <stroke
        android:width="0.5dp"
        android:color="#000000"/> <!-- You can customize the stroke color and width -->
</shape>
